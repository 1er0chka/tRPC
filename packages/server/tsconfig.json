{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs","lib": ["es6", "DOM"],

    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
